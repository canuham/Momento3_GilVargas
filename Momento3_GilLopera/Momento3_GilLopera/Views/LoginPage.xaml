<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Momento3_GilLopera.Views.LoginPage"
             xmlns:tdr="clr-namespace:Momento3_GilLopera.Helpers">
    <StackLayout VerticalOptions="Center">
        <Image Source="login.png" WidthRequest="80"/>
        <Entry x:Name="txtUsuario" Placeholder="{tdr:Translate Usuario}"/>
        <Entry x:Name="txtPassword" Placeholder="{tdr:Translate Contrasena}" IsPassword="True"/>
        <!--Ispasword es para enmascarar los datos-->
        <Button Text="{tdr:Translate Ingresar}" Clicked="Ingresar_click"/>
    </StackLayout>
</ContentPage>